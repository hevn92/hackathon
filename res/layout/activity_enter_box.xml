<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/second_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EnterBoxActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="38dp"
        android:text="Current Balance:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/clear_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/add_box"
        android:layout_alignBottom="@+id/add_box"
        android:layout_toRightOf="@+id/textView2"
        android:minWidth="150dip"
        android:text="Clear All" />

    <ImageView
        android:id="@+id/box6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/clear_all"
        android:layout_alignTop="@+id/box5"
        android:layout_marginRight="18dp"
        android:src="@drawable/pouch"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/box5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/box3"
        android:layout_below="@+id/box3"
        android:layout_marginTop="47dp"
        android:src="@drawable/pouch"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/box4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/box6"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="161dp"
        android:src="@drawable/pouch"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/box2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/box4"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="40dp"
        android:src="@drawable/pouch"
        android:visibility="invisible" />

    <Button
        android:id="@+id/add_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/box5"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="84dp"
        android:minWidth="150dip"
        android:onClick="increaseBox"
        android:text="Add BOX" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="65dp"
        android:layout_toRightOf="@+id/add_box"
        android:text="BOX list:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/box1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/textView1"
        android:layout_alignTop="@+id/box2"
        android:src="@drawable/pouch"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/box3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/box1"
        android:layout_alignTop="@+id/box4"
        android:fitsSystemWindows="true"
        android:src="@drawable/pouch"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/box_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView2"
        android:layout_marginLeft="28dp"
        android:layout_toRightOf="@+id/textView1"
        android:text="something"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>